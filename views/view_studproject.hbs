    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="background-color: DDE6ED;">
      <h1 class="text-primary p-4">MY Project {{stage.name}}</h1>

      <!-- Your page content goes here -->
      <table class="table table-bordered table-horizontal">

        <tbody>
          <tr>
            <th colspan="2" class="text-center" style="padding: 40px;">Phase</th>
            <th colspan="2" class="text-center" style="padding: 40px;">Upload</th>
            <th colspan="2" class="text-center" style="padding: 40px;">Status</th>
            <th colspan="2" class="text-center" style="padding: 40px;">Marks</th>
            <th colspan="2" class="text-center" style="padding: 40px;">Comments</th>

          </tr>
          <tr>
            <th colspan="2" class="text-center" style="padding: 40px;">Study Phase</th>
            <td colspan="2" class="text-center" style="padding: 40px;"><a
                href="/view_file/{{pid}}&1">{{stage.stage1}}</a></td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.status1}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.level1}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{dt.datac1}}</td>
          </tr>
          <tr>
            <th colspan="2" class="text-center" style="padding: 40px;">Design Phase</th>
            <td colspan="2" class="text-center" style="padding: 40px;"><a
