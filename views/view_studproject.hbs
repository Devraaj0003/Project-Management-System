            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.status3}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.level3}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{dt.datac3}}</td>
          </tr>
          <tr>
            <th colspan="2" class="text-center" style="padding: 40px;">Test Phase</th>
            <td colspan="2" class="text-center" style="padding: 40px;"><a
