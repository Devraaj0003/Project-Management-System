            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.status4}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{stage.level4}}</td>
            <td colspan="2" class="text-center" style="padding: 40px;">{{dt.datac4}}</td>
          </tr>
        </tbody>
      </table>
      <h1>Update Status</h1>
      <div class="container border rounded w-50 border-dark p-4">
        <form action="/update_status/{{stage.grp_id}}" method="post">
          <div class="form-group">
           
            <select class="form-control" id="exampleFormControlSelect1" value="phase" name="phase">
              <option>Study Phase</option>
              <option>Design Phase</option>
              <option>Development Phase</option>
              <option>Test Phase</option>
            </select>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="exampleRadios1" value="Approved" checked>
            <label class="form-check-label" for="exampleRadios1">
              Approved
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="exampleRadios2" value="Not Approved">
            <label class="form-check-label" for="exampleRadios2">
              Not Approved
            </label>
          </div>

          <div class="form-group">
            <label for="marks">Enter Marks</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="enter marks" name="mark">
          </div>
          <div class="form-group">
            <label for="marks">Enter Comments</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Comment here..."
              name="comment">
          </div>
          <center><button type="submit" class="btn btn-primary">Submit</button></center>

        </form>
      </div>


      </form>
