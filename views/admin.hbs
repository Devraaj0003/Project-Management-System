<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar min-vh-100 ">
      <div class="position-sticky">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/r_teacher">
              New register Teacher
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/r_student">
              New register Student
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/new_project">
              New Project
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="loadProject" href="/admin/view_teacher">
              Manage Teacher
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/view_student">
              Manage Student
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/view_project">
              Manage Project
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/view_group">
              Manage Group
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/view_mark">
              Manage Mark
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <h2 class="text-primary p-4">All Project</h2>


      <div class="container d-flex flex-wrap justify-content-around">
        {{#each result}}
        <div class="card text-bg-warning mb-3" style="max-width: 18rem;">
          <div class="card-header ">{{this.p_id}}</div>
          <div class="h4 p-3">Year: {{this.year}}</div>
          <div class="card-body border rounded m-3">
            <div class="">Name: {{this.student_name}}</div>
            <div class="">Teacher: {{this.teacher_name}}</div>

            <h5 class="card-title">{{this.project_name}}</h5>
            <p class="card-text">{{this.project_detail}}</p>
          </div>
          <center><div class="h5">{{this.status}}</div></center>

        </div>

        {{/each}}

      </div>
    </main>
  </div>
</div>